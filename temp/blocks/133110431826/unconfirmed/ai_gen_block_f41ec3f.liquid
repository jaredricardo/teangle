{% doc %}
  @prompt
    simple banner announcement banner with FR message and EN message. Text should be linkable., I need the english and french links to be different , The FR message needs to only show when the locale is FR and the EN message needs to only show when the locale is EN
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-announcement-banner-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 20px;
    text-align: center;
  }

  .ai-announcement-banner__link-{{ ai_gen_id }} {
    display: inline-block;
    color: {{ block.settings.text_color }};
    text-decoration: none;
    font-size: {{ block.settings.font_size }}px;
    transition: opacity 0.3s ease;
  }

  .ai-announcement-banner__link-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-announcement-banner__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    margin: 0;
  }
{% endstyle %}

<div class="ai-announcement-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if request.locale.iso_code == 'fr' %}
    {% if block.settings.message_fr != blank %}
      {% if block.settings.link_fr != blank %}
        <a href="{{ block.settings.link_fr }}" class="ai-announcement-banner__link-{{ ai_gen_id }}">
          {{ block.settings.message_fr }}
        </a>
      {% else %}
        <p class="ai-announcement-banner__text-{{ ai_gen_id }}">
          {{ block.settings.message_fr }}
        </p>
      {% endif %}
    {% endif %}
  {% else %}
    {% if block.settings.message_en != blank %}
      {% if block.settings.link_en != blank %}
        <a href="{{ block.settings.link_en }}" class="ai-announcement-banner__link-{{ ai_gen_id }}">
          {{ block.settings.message_en }}
        </a>
      {% else %}
        <p class="ai-announcement-banner__text-{{ ai_gen_id }}">
          {{ block.settings.message_en }}
        </p>
      {% endif %}
    {% endif %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Announcement banner",
  "settings": [
    {
      "type": "header",
      "content": "French"
    },
    {
      "type": "text",
      "id": "message_fr",
      "label": "Message",
      "default": "Message en fran√ßais"
    },
    {
      "type": "url",
      "id": "link_fr",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "English"
    },
    {
      "type": "text",
      "id": "message_en",
      "label": "Message",
      "default": "Message in English"
    },
    {
      "type": "url",
      "id": "link_en",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#3b7d52"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 15
    },
    {
      "type": "range",
      "id": "padding",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Padding",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Announcement banner"
    }
  ]
}
{% endschema %}
