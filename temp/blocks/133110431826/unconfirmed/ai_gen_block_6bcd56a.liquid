{% doc %}
  @prompt
    simple banner announcement banner with FR message and EN message. Text should be linkable.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-announcement-banner-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 20px;
    text-align: center;
  }

  .ai-announcement-banner__link-{{ ai_gen_id }} {
    display: block;
    color: {{ block.settings.text_color }};
    text-decoration: none;
    font-size: {{ block.settings.font_size }}px;
    transition: opacity 0.3s ease;
  }

  .ai-announcement-banner__link-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-announcement-banner__text-{{ ai_gen_id }} {
    margin: 0;
  }
{% endstyle %}

<div class="ai-announcement-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.link != blank %}
    <a href="{{ block.settings.link }}" class="ai-announcement-banner__link-{{ ai_gen_id }}">
      <p class="ai-announcement-banner__text-{{ ai_gen_id }}">
        {% if block.settings.message_fr != blank %}
          {{ block.settings.message_fr }} | 
        {% endif %}
        {% if block.settings.message_en != blank %}
          {{ block.settings.message_en }}
        {% endif %}
      </p>
    </a>
  {% else %}
    <div class="ai-announcement-banner__link-{{ ai_gen_id }}">
      <p class="ai-announcement-banner__text-{{ ai_gen_id }}">
        {% if block.settings.message_fr != blank %}
          {{ block.settings.message_fr }} | 
        {% endif %}
        {% if block.settings.message_en != blank %}
          {{ block.settings.message_en }}
        {% endif %}
      </p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Announcement banner",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "message_fr",
      "label": "French message",
      "default": "Message en fran√ßais"
    },
    {
      "type": "text",
      "id": "message_en",
      "label": "English message",
      "default": "Message in English"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#3b7d52"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 15
    },
    {
      "type": "range",
      "id": "padding",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Padding",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Announcement banner"
    }
  ]
}
{% endschema %}
