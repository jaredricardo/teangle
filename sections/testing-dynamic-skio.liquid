    .free-gift-banner__text {
        font-size: 14px;
        padding-right: 70px;
    }

    .free-gift-banner__value-badge {
        font-size: 10px;
        padding: 6px 10px;
        top: 12px;
        right: 12px;
    }

    .purchase-type {
        padding: 16px;
    }

    .purchase-type__label {
        font-size: 14px;
    }

    .purchase-type__option-box {
        padding: 12px;
    }

    .purchase-type__option-label {
        font-size: 13px;
    }

    .purchase-type__option-price {
        font-size: 12px;
    }

    .purchase-type__select {
        padding: 6px 10px;
        font-size: 12px;
        min-width: 120px;
    }

    .purchase-type__benefit {
        font-size: 12px;
    }

    .purchase-type__benefit-icon {
        width: 14px;
        height: 14px;
    }

    .purchase-type__benefit--no-check {
        padding-left: 22px;
