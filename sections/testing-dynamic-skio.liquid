    const sellingPlanGroup = data?.DynamicBox?.sellingPlanGroup || {};
    const subscriptionPlans = Object.entries(sellingPlanGroup).map(([key, plan]) => {
        const id = key.split('/').pop();
        return { id, title: plan.title };
