        },
        {
            "type": "color",
            "id": "bg_1",
            "label": "Background Color #1"
        },
        {
            "type": "color",
            "id": "bg_2",
            "label": "Background Color #2"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Section Text Color"
        },
        {
            "type": "color",
            "id": "callout_color",
            "label": "Under Product Title Callout Color"
        },
        {
            "type": "color",
            "id": "border_color",
            "label": "Card Border Color"
        },
        {
            "type": "color",
            "id": "button_color",
            "label": "Section Button Color"
        },
        {
            "type": "color",
            "id": "card_bg_color",
            "label": "Card Background Color"
        },
        {
            "type": "header",
            "content": "Section Text Settings"
        },
        {
            "type": "text",
            "id": "header",
            "label": "Section Header"
        },
        {
            "type": "text",
            "id": "subheader",
            "label": "Section Subheader"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Buy / Link Button Text",
            "default": "Buy Now"
        },
        {
            "type": "header",
            "content": "Section Image Settings"
        },
        {
            "type": "checkbox",
            "id": "contain_image",
            "label": "Enable Contain Image (defaults to cover)",
            "default": false
        }
    ],
    "blocks": [
        {
            "type": "product-card",
            "name": "Product Card",
            "settings": [
                {
                    "type": "product",
                    "id": "card_product",
                    "label": "Product"
                },
                {
                    "type": "image_picker",
                    "id": "product_alt_image",
                    "label": "Product Alternative Image"
                },
                {
                    "type": "text",
                    "id": "product_alt_title",
                    "label": "Product Alt Title"
                },
                {
                    "type": "text",
                    "id": "product_subtitle",
                    "label": "Product Subtitle"
                },
                {
                    "type": "checkbox",
                    "id": "enable_savings_callout",
                    "label": "Enable 'ðŸ’° You save X' Callout",
                    "info": "If produt has no compare at price, this will remain hidden",
                    "default": true
                },
                {
                    "type": "richtext",
                    "id": "free_gift_text",
                    "label": "Free Gift Value (blank for none)"
                },
                {
                    "type": "text",
                    "id": "shipping_callout",
                    "label": "Enable Shipping Callout",
                    "default": "ðŸšš Free Shipping Included"
                },
                {
                    "type": "image_picker",
                    "id": "sticker",
                    "label": "Card Sticker"
                },
                {
                    "type": "text",
                    "id": "sticker_text",
                    "label": "Sticker Text"
                },
                {
                    "type": "range",
                    "id": "sticker_top",
                    "label": "% sticker is from top",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "default": 0
                },
                {
                    "type": "range",
                    "id": "sticker_left",
                    "label": "% sticker is from left",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "default": 0
                },
                {
                    "type": "number",
                    "id": "translate_y",
                    "label": "Sticker center translate Y",
                    "default": -50
                },
                {
                    "type": "number",
                    "id": "translate_x",
                    "label": "Sticker center translate X",
                    "default": -50
                },
                {
                    "type": "number",
                    "id": "sticker_text_rotation",
                    "label": "Sticker Text rotation (up to 360)",
                    "info": "Must be kept at 0 for no rotation, can go negative as well",
                    "default": 0
                },
                {
                    "type": "color",
                    "id": "sticker_text_color",
                    "label": "Sticker Text Color",
                    "default": "#FFF"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "JR Product Cards"
        }
    ]
}
{% endschema %}